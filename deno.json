{
	"compilerOptions": {
		"lib": ["deno.ns", "dom", "deno.unstable"],
		"strict": true
	},
	"unstable": ["kv", "worker-options", "cron", "net"],
	"imports": {
		"@biomejs/biome": "npm:@biomejs/biome@^2.1.4",
		"@cliffy/prompt": "jsr:@cliffy/prompt@1.0.0-rc.7",
		"@db/sqlite": "jsr:@db/sqlite@^0.12.0",
		"@hono/hono": "jsr:@hono/hono@^4.6.9",
		"@std/assert": "jsr:@std/assert@^1.0.6",
		"@std/async": "jsr:@std/async@^1.0.8",
		"@std/bytes": "jsr:@std/bytes@^1.0.2",
		"@std/cli": "jsr:@std/cli@^1.0.6",
		"@std/collections": "jsr:@std/collections@^1.0.9",
		"@std/crypto": "jsr:@std/crypto@^1.0.3",
		"@std/csv": "jsr:@std/csv@^1.0.3",
		"@std/encoding": "jsr:@std/encoding@^1.0.5",
		"@std/fmt": "jsr:@std/fmt@^1.0.3",
		"@std/fs": "jsr:@std/fs@^1.0.5",
		"@std/http": "jsr:@std/http@^1.0.9",
		"@std/path": "jsr:@std/path@^1.0.8",
		"@std/toml": "jsr:@std/toml@^1.0.1",
		"@std/ulid": "jsr:@std/ulid@^1.0.0",
		"@std/uuid": "jsr:@std/uuid@^1.0.4",
		"@std/yaml": "jsr:@std/yaml@^1.0.5"
	},
	"tasks": {
		"dev": "deno run -A main.ts",
		"biome": "biome check --fix"
	},
	"fmt": {
		"useTabs": true
	},
	"lint": {
		"rules": {
			"tags": ["recommended", "jsr"]
		},
		"report": "pretty"
	}
}
